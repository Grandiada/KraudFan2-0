<script type='text/javascript'>
    var i = 1;
    $(function () {
        $("#AddTarget").click(function (e) {
            var div = document.createElement('div');

            div.className = 'form-group';

            div.innerHTML = '<button type="button" class="close" aria-label="Close">\
            <span aria-hidden="true" >&times;</span>\
            </button>\
            Financial target\
            <br> Total Sum <br>\
            <input id="TotalSum" type="number" name="Targets['+ i + '].TotalSum" required>\
            <br> Description <br>\
            <textarea class="form-control" id="Desctiprion" name="Targets['+ i + '].Desctiprion" required></textarea>\
            Expiration Time <br>\
            <input type="date" id="DateEnd" name="Targets['+ i + '].DateEnd" required><hr>';
            i++;
            document.getElementById('FinancialTarget').appendChild(div);
        });
    });

    $(function() {
        $('#FinancialTarget').on('click', '.close', function (e) {
            $(this).parent(this).remove();
        });

    });

</script>