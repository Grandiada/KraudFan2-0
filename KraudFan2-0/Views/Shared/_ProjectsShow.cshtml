@model IEnumerable<KraudFan2_0.Models.AppData.Project>


<link href="~/css/ProjectIndex.css" rel="stylesheet" />


@{
    int i = 0;
    if (Model.Count() == 0)
    {
        @:<h3>Проектов не найдено</h3>
    }
}

    <div class="row">
       
            @foreach (var item in Model)
            {
                <div class="col-sm-4 col-md-4" style="padding-top:15px">
                    <div class="post">
                        <div class="post-img-content">
                            <img src="@item.Image" width="460" height="250" class="img-responsive" />
                            <span class="post-title">
                                <b>@item.Name</b><br /><b>Рейтинг: @item.TotalRate</b><br />

                                <b>
                                    @foreach (var tag in item.ProjectTags)
                                {
                                    if (tag != item.ProjectTags.Last())
                                    {
                                        <span>@tag.Tag.Name, </span>
                                    }
                                    else
                                    {
                                        <span>@tag.Tag.Name</span>
                                    }
                                }
                            </b>

                        </span>
                    </div>
                    <div class="content">
                        <div class="author">

                            By <b>@item.User.UserName</b> |
                            <time datetime="@item.DateCreate">@item.DateCreate</time>
                        </div>
                        <div>
                            @item.Description
                        </div>
                        <div>
                            <br />
                            <a href="~/Project/ProjectShow/@item.Id" class="btn btn-success btn-sm">Read more</a>

                        </div>
                    </div>
                </div>
            </div>
                {
                    i++;
                    if (i % 3 == 0)
                    {
                        @:</div><div class="row">
                    }
                }
            }
        
    </div>
